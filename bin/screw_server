#!/usr/bin/env ruby

require "rubygems"
gem "bundler", "= 1.0.7"
require "bundler"
ENV["BUNDLE_GEMFILE"] = File.expand_path("../../Gemfile", __FILE__)
Bundler.require

ScrewServer::Base.start_serving_specs(
  File.join(Dir.pwd, "spec/javascripts"),
  File.join(Dir.pwd, "public"),
  :host => 'localhost', :port => 3210, :environment => "production"
)
